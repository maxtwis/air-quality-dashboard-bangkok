{
  "name": "mcp-context-manager",
  "version": "7.5.0",
  "description": "Simple AI Context for Better Code Generation - Persistent context system for AI coding assistants",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "mcp-context-manager": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "AGENT-CODING-TEMPLATE.md",
    "AGENT-CONTEXT.md",
    "AGENT-MEMORY.md",
    ".context7.yaml",
    "AGENT-PROMPTING-GUIDE.md",
    "CHANGELOG.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "ai",
    "context",
    "claude",
    "cursor",
    "copilot",
    "ai-assistant",
    "persistent-context",
    "figma",
    "code-generation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0"
  }
}
