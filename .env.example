# Environment Variables for Bangkok Air Quality Dashboard
# Copy this file to .env.local and fill in your actual values

# WAQI API Configuration
WAQI_API_TOKEN=your_waqi_api_token_here

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# For client-side access (Next.js apps)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Database Configuration (alternative if not using Supabase)
DATABASE_URL=postgresql://username:password@host:port/database

# Development Configuration
NODE_ENV=development
PORT=3000